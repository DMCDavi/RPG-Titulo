                <Button Content="+" FontFamily="Times New Roman" FontSize="20" FontWeight="Bold" Click="Cha_Plus_Click" Height="45" Width="45" />
            </StackPanel>
        </StackPanel>






        <TextBlock x:Name="score" Margin="0,80,136,0" FontFamily="Times New Roman" FontSize="20" Text="0" TextAlignment="Center" Height="21" VerticalAlignment="Top" HorizontalAlignment="Right" Width="107" />
        <TextBlock Margin="0,47,148,0" FontFamily="Times New Roman" FontSize="20" Text="Pontos" TextAlignment="Center" Height="32" VerticalAlignment="Top" HorizontalAlignment="Right" Width="81" />
    </Grid>
