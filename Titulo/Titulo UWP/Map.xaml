<Page
    x:Class="Titulo_UWP.Map"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Titulo_UWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" 
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    >
    <Grid x:Name="MapGrid" Width="1280" Height="720">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Image x:Name="MapImg" Source="/Assets/Mapa/Mapa.png" Stretch="Fill" Margin="-2000,-2960,-3680,-560" Grid.RowSpan="9" Grid.ColumnSpan="16" />
        <Button Height="0" Width="0" />
        <Button x:Name="SkipButton" Click="SkipTurn" Visibility="Collapsed" Grid.Column="0" Grid.Row="8" Grid.ColumnSpan="4" Content="Terminar" CornerRadius="20" VerticalAlignment="Center" FontFamily="Times New Roman" Foreground="#000" FontSize="30" Background="#CCFFFFFF" HorizontalAlignment="Center" Padding="25,0,25,0" />
        <Button x:Name="MoveButton" Click="MoveButton_Click" Visibility="Collapsed" Grid.Column="4" Grid.Row="8" Grid.ColumnSpan="4" Content="Mover" CornerRadius="20" VerticalAlignment="Center" FontFamily="Times New Roman" Foreground="#000" FontSize="30" Background="#CCFFFFFF" HorizontalAlignment="Center" Padding="25,0,25,0" />
        <Button x:Name="BonusButton" Visibility="Collapsed" Grid.Column="8" Grid.Row="8" Grid.ColumnSpan="4" Content="Ação Bônus" CornerRadius="20" VerticalAlignment="Center" FontFamily="Times New Roman" Foreground="#000" FontSize="30" Background="#CCFFFFFF" HorizontalAlignment="Center" Padding="25,0,25,0">
            <Button.Flyout>
                <Flyout>
                    <StackPanel x:Name="BonusPanel" Orientation="Vertical" />
                </Flyout>
            </Button.Flyout>
        </Button>
        <Button x:Name="ActionButton" Visibility="Collapsed" Grid.Column="12" Grid.Row="8" Grid.ColumnSpan="4" Content="Ação" CornerRadius="20" VerticalAlignment="Center" FontFamily="Times New Roman" Foreground="#000" FontSize="30" Background="#CCFFFFFF" HorizontalAlignment="Center" Padding="25,0,25,0">
            <Button.Flyout>
                <Flyout>
                    <StackPanel x:Name="ActionPanel" Orientation="Vertical" />
                </Flyout>
            </Button.Flyout>
        </Button>

        <Image Visibility="Collapsed" Grid.Column="6" Grid.Row="0" Grid.ColumnSpan="4" x:Name="Scrollpaper" Source="/Assets/Menu/scrollpaper.png" Stretch="Fill" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Visibility="Collapsed" Grid.Column="6" Grid.Row="0" Grid.ColumnSpan="4" x:Name="EnemyName" FontFamily="Times New Roman" Foreground="#000" FontSize="30" TextAlignment="Center" VerticalAlignment="Center" />
        <Image Grid.Column="7" Grid.Row="4" x:Name="CharacterImg" Source="/Assets/Personagens/Ana/Sem_fundo/Ana_Goliath.png" Height="100" Width="100" HorizontalAlignment="Center" Margin="0,-80,0,0"  />
        <StackPanel x:Name="EnemyHp" Visibility="Collapsed" Grid.ColumnSpan="16" Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center"/>
        <StackPanel x:Name="PlayerHp" Visibility="Collapsed" Grid.ColumnSpan="16" Grid.Row="7" Orientation="Horizontal" HorizontalAlignment="Center"/>
        <StackPanel x:Name="DeathPanel" Visibility="Collapsed" Grid.RowSpan="9" Grid.ColumnSpan="16" CornerRadius="30" Background="#CCFFFFFF" Padding="50" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="200,0,200,0" >
            <RichTextBlock FontFamily="Times New Roman" Foreground="#000" FontSize="30">
                <Paragraph FontFamily="Times New Roman" Foreground="#000">Você falhou ao tentar evitar a criação do JavaScript. Ao morrer, Deus Lapa, profundamente decepcionado com sua falta de capacidade, condenou sua alma a passar a eternidade num mundo feito em JS.</Paragraph>
            </RichTextBlock>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="EndButton" FontFamily="Times New Roman" FontSize="30" Foreground="#000" CornerRadius="10" Background="#00FFFFFF" Content="Voltar a sua insignificância" Click="NavigateSelection" HorizontalAlignment="Center" Margin="10"/>
            </StackPanel>
        </StackPanel>

        <Button x:Name="InventoryButton" Visibility="Collapsed" Click="OpenInventory" Grid.Column="14" Grid.Row="2"  Grid.ColumnSpan="2" CornerRadius="20" Content="Inventário" VerticalAlignment="Top" FontFamily="Times New Roman" Foreground="#000" FontSize="30" Background="#CCFFFFFF" Margin="6,22,0,0"  />
        <StackPanel x:Name="Inventory" Visibility="Collapsed" Background="#000000" CornerRadius="10"  Grid.ColumnSpan="15" Grid.RowSpan="25" Grid.Column="0" Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Center" Width="420" Height="540">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock FontSize="30" Foreground="White" HorizontalAlignment="Center" Grid.Row="0" Grid.Column="0" FontFamily="Times New Roman">INVENTÁRIO</TextBlock>
            </Grid>
                <Grid x:Name="EquipmentGrid"  Width="225" Height="75" Padding="0,10,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                 </Grid.ColumnDefinitions>
                <Button Background="#5e5e5e"  Grid.Row="0" Grid.Column="0" Width="75" Height="75">
                    <Image x:Name="charArma"/>
                </Button>
                <Button Background="#5e5e5e" Grid.Row="0" Grid.Column="1" Width="75" Height="75">
                    <Image x:Name="charArmadura"/>
                </Button>
                <Button Background="#5e5e5e" Grid.Row="0" Grid.Column="2" Width="75" Height="75">
                    <Image x:Name="charBota"/>
                </Button>

                </Grid>
                <Grid x:Name="ItemsGrid"  Width="400" Height="400" Margin="0,15,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                <Button Background="#5e5e5e"  Grid.Row="0" Grid.Column="0" Width="80" Height="80" >
                    <Image x:Name="item0"/>
                </Button>
                <Button Background="#5e5e5e"  Grid.Row="0" Grid.Column="1" Width="80" Height="80" >
                    <Image x:Name="item1"/>
                </Button>
                <Button Background="#5e5e5e"  Grid.Row="0" Grid.Column="2" Width="80" Height="80" >
                    <Image x:Name="item2"/>
                </Button>
                <Button Background="#5e5e5e"  Grid.Row="0" Grid.Column="3" Width="80" Height="80">
                    <Image x:Name="item3"/>
                </Button>
                <Button Background="#5e5e5e"  Grid.Row="0" Grid.Column="4" Width="80" Height="80" >
                    <Image x:Name="item4"/>
                </Button>
                <Button Background="#5e5e5e"   Grid.Row="1" Grid.Column="0" Width="80" Height="80" >
                    <Image x:Name="item5"/>
                </Button>
                <Button Background="#5e5e5e"  Grid.Row="1" Grid.Column="1" Width="80" Height="80" >
                    <Image x:Name="item6"/>
                </Button>
                <Button Background="#5e5e5e"  Grid.Row="1" Grid.Column="2" Width="80" Height="80" >
                    <Image x:Name="item7"/>
                </Button>
                <Button Background="#5e5e5e"  Grid.Row="1" Grid.Column="3" Width="80" Height="80" >
                    <Image x:Name="item8"/>
                </Button>
                <Button Background="#5e5e5e"  Grid.Row="1" Grid.Column="4" Width="80" Height="80" >
                    <Image x:Name="item9"/>
                </Button>
                <Button Background="#5e5e5e"  Grid.Row="2" Grid.Column="0" Width="80" Height="80" >
                    <Image x:Name="item10"/>
                </Button>
                <Button Background="#5e5e5e"  Grid.Row="2" Grid.Column="1" Width="80" Height="80" >
                    <Image x:Name="item11"/>
                </Button>
                <Button Background="#5e5e5e"  Grid.Row="2" Grid.Column="2" Width="80" Height="80" >
                    <Image x:Name="item12"/>
                </Button>
                <Button Background="#5e5e5e"  Grid.Row="2" Grid.Column="3" Width="80" Height="80" >
                    <Image x:Name="item13"/>
                </Button>
                <Button Background="#5e5e5e"  Grid.Row="2" Grid.Column="4" Width="80" Height="80" >
                    <Image x:Name="item14"/>
                </Button>
                <Button Background="#5e5e5e"  Grid.Row="3" Grid.Column="0" Width="80" Height="80" >
                    <Image x:Name="item15"/>
                </Button>
                <Button Background="#5e5e5e"  Grid.Row="3" Grid.Column="1" Width="80" Height="80" >
                    <Image x:Name="item16"/>
                </Button>
                <Button Background="#5e5e5e"  Grid.Row="3" Grid.Column="2" Width="80" Height="80" >
                    <Image x:Name="item17"/>
                </Button>
                <Button Background="#5e5e5e"  Grid.Row="3" Grid.Column="3" Width="80" Height="80" >
                    <Image x:Name="item18"/>
                </Button>
                <Button Background="#5e5e5e"  Grid.Row="3" Grid.Column="4" Width="80" Height="80" >
                    <Image x:Name="item19"/>
                </Button>
                <Button Background="#5e5e5e"  Grid.Row="4" Grid.Column="0" Width="80" Height="80">
                    <Image x:Name="item20"/>
                </Button>
                <Button Background="#5e5e5e"  Grid.Row="4" Grid.Column="1" Width="80" Height="80" >
                    <Image x:Name="item21"/>
                </Button>
                <Button Background="#5e5e5e"  Grid.Row="4" Grid.Column="2" Width="80" Height="80" >
                    <Image x:Name="item22"/>
                </Button>
                <Button Background="#5e5e5e"  Grid.Row="4" Grid.Column="3" Width="80" Height="80" >
                    <Image x:Name="item23"/>
                </Button>
                <Button Background="#5e5e5e" Grid.Row="4" Grid.Column="4" Width="80" Height="80" >
                    <Image x:Name="item24"/>
                </Button>

            </Grid>
            


        </StackPanel>


    </Grid>
</Page>
