            </StackPanel>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,10,0,10">
                <TextBlock FontFamily="Times New Roman" FontSize="20" Text="Inteligência" TextAlignment="Right" Height="24" Width="112" Margin="0,0,10,0" />
